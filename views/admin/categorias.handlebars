<h2> Lista de Categorias</h2>

<hr>
<a href="/admin/categorias/add"><button class='btn btn-success'> Nova Categoria </button></a> 
<br><br>

{{#each categorias}}
    <div class="card">
        <div class="card-body">
            <h4> {{nome}}</h4>
            <small>Slug: {{slug}}</small>
            <br>
            <a href="/admin/categorias/edit/{{_id}}"><button type="submit" class="btn btn-info mt-4" >Editar Categoria</button></a>
            <form action="/admin/categorias/delete" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button type="submit" class="btn btn-danger mt-2"> Excluir Categoria </button>
            </form>
        </div>
    </div>
{{else}}

<div class="card">
     <div class="card-body">
        <h4> Nenhuma Categoria Cadastrada! </h4>
    </div>
</div>  

{{/each}}

